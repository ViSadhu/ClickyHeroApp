<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/material_dynamic_primary80"
    android:padding="12dp"
    android:layout_marginVertical="1dp">

    <TextView
        android:id="@+id/tvComboName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/combo_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivArrow0"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:layout_weight="0.125"
            android:padding="4dp" />

        <ImageView
            android:id="@+id/ivArrow1"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:layout_weight="0.125"
            android:padding="4dp" />

        <ImageView
            android:id="@+id/ivArrow2"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:layout_weight="0.125"
            android:padding="4dp" />

        <ImageView
            android:id="@+id/ivArrow3"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:layout_weight="0.125"
            android:padding="4dp" />

        <ImageView
            android:id="@+id/ivArrow4"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:layout_weight="0.125"
            android:padding="4dp" />

        <ImageView
            android:id="@+id/ivArrow5"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:layout_weight="0.125"
            android:padding="4dp" />

        <ImageView
            android:id="@+id/ivArrow6"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:layout_weight="0.125"
            android:padding="4dp" />

        <ImageView
            android:id="@+id/ivArrow7"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:layout_weight="0.125"
            android:padding="4dp" />
    </LinearLayout>
</LinearLayout>